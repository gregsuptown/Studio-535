# Studio 535 Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL="mysql://username:password@host:port/database_name"
# Example for TiDB: "mysql://user:pass@gateway.prod.aws.tidbcloud.com:4000/database"

# ==========================================
# AUTHENTICATION (All FREE!)
# ==========================================

# Generate a random 32+ character string for JWT_SECRET
# Used for session signing
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"

# Google OAuth (FREE - https://console.cloud.google.com)
# 1. Create a project at console.cloud.google.com
# 2. Enable Google+ API
# 3. Create OAuth 2.0 credentials
# 4. Add authorized redirect URIs
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/google/callback"

# GitHub OAuth (FREE - https://github.com/settings/developers)
# 1. Go to Settings > Developer settings > OAuth Apps
# 2. Create new OAuth App
# 3. Set callback URL to your domain/api/auth/github/callback
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_REDIRECT_URI="http://localhost:3000/api/auth/github/callback"

# Owner email for admin notifications
OWNER_EMAIL="you@example.com"

# ==========================================
# FILE STORAGE (S3)
# ==========================================
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="studio535-uploads"

# ==========================================
# STRIPE PAYMENT PROCESSING
# ==========================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."  # Use sk_live_ for production
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_..."  # Use pk_live_ for production

# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_..."

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
VITE_APP_TITLE="Studio 535"
VITE_APP_LOGO="/logo.svg"

# App URL for OAuth redirects and links
# Development: http://localhost:3000
# Production: https://yourdomain.com
VITE_APP_URL="http://localhost:3000"

# ==========================================
# ANALYTICS (Optional)
# ==========================================
VITE_ANALYTICS_ENDPOINT=""
VITE_ANALYTICS_WEBSITE_ID=""

# ==========================================
# AI FEATURES (Optional)
# ==========================================
BUILT_IN_FORGE_API_URL=""
BUILT_IN_FORGE_API_KEY=""
