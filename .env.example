# Studio 535 Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL="mysql://username:password@host:port/database_name"
# Example for PlanetScale: "mysql://username:password@aws.connect.psdb.cloud/studio535?ssl={"rejectUnauthorized":true}"

# ==========================================
# AUTHENTICATION
# ==========================================
# Generate a random 32+ character string for JWT_SECRET
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"

# Manus OAuth Configuration
OAUTH_SERVER_URL="https://api.manus.im"
VITE_OAUTH_PORTAL_URL="https://oauth.manus.im"
VITE_APP_ID="your-manus-app-id"

# Owner Information (from your Manus account)
OWNER_OPEN_ID="your-manus-openid"
OWNER_NAME="Your Name"

# ==========================================
# FILE STORAGE (S3)
# ==========================================
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="studio535-uploads"

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
VITE_APP_TITLE="Studio 535"
VITE_APP_LOGO="/logo.svg"

# ==========================================
# ANALYTICS (Optional)
# ==========================================
VITE_ANALYTICS_ENDPOINT=""
VITE_ANALYTICS_WEBSITE_ID=""

# ==========================================
# MANUS FORGE API (Optional - for advanced features)
# ==========================================
BUILT_IN_FORGE_API_URL="https://forge.manus.im"
BUILT_IN_FORGE_API_KEY=""
VITE_FRONTEND_FORGE_API_KEY=""
VITE_FRONTEND_FORGE_API_URL="https://forge.manus.im"
